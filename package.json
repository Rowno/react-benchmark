{
  "name": "react-benchmark",
  "version": "3.0.0",
  "description": "A tool for benchmarking the render performance of React components.",
  "author": "Roland Warmerdam (https://roland.codes)",
  "keywords": [
    "react",
    "benchmark",
    "chrome",
    "webpack",
    "production"
  ],
  "repository": "Rowno/react-benchmark",
  "license": "ISC",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "react-benchmark": "./lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "yarn lint && ava",
    "lint": "eslint '**/*.{js,jsx}'"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@types/benchmark": "^1.0.33",
    "@types/node": "*",
    "babel-loader": "^8.0.6",
    "benchmark": "^2.1.4",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "get-port": "^5.0.0",
    "html-webpack-plugin": "^4.5.0",
    "humanize-number": "^0.0.2",
    "lodash": "^4.17.11",
    "meow": "^7.1.1",
    "ora": "^5.1.0",
    "pkg-dir": "^4.2.0",
    "pluralize": "^8.0.0",
    "puppeteer": "^5.3.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "resolve-from": "^5.0.0",
    "source-map-loader": "^1.1.0",
    "tempy": "^0.7.1",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.33.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@types/react": "^16.9.49",
    "ava": "^3.12.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-react": "^7.21.2",
    "execa": "^4.0.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/react"
    ],
    "env": {
      "es2017": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "overrides": [
      {
        "files": [
          "lib/client.js"
        ],
        "env": {
          "browser": true,
          "node": false
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "ava": {
    "timeout": "20s"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
